<body>
  <h1>Open a Book Open your mind</h1>
  <form action="/searches" method="post">
    <input type="text" name="search" value="title" id="book-search">

    <fieldset>
      <label for="title">
        <span>Title</span>
        <input type="radio" name="search" value="title">
      </label>
    </fieldset>

    <fieldset>
        <label for="author">
          <span>Author:</span>
          <input type="radio" name="search" value="author">
        </label>
    </fieldset>  

    <button type="submit">Open a new book</button>    
  </form>
</body>
